<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <!-- Sticky Header Section -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#33000080"
            android:padding="16dp"
            app:elevation="4dp">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <!-- Profile Icon -->
                <ImageView
                    android:id="@+id/profile_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_profile_placeholder" />

                <!-- Account Title -->
                <TextView
                    android:id="@+id/account_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:text="Account"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Profile Picture and Username -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/icon"
                        android:scaleType="centerCrop"
                         />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_image"
                        android:layout_centerHorizontal="true"
                        android:text="Username"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <!-- Add Email TextView below Username -->
                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/username"
                        android:layout_centerHorizontal="true"
                        android:text="Email"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </RelativeLayout>

                <!-- My Playlists Button -->
                <Button
                    android:id="@+id/playlists_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_button_background"
                    android:text="My Playlists"
                    android:textColor="@android:color/white" />

                <!-- Followed Artists Button -->
                <Button
                    android:id="@+id/followed_artists_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_button_background"
                    android:text="Followed Artists"
                    android:textColor="@android:color/white" />

                <!-- Logout Button -->
                <Button
                    android:id="@+id/logout_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button_background"
                    android:text="Logout"
                    android:textColor="@android:color/white" />

                <!-- Music Related Points -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp">

                    <!-- Listening Stats -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:background="#440096">

                            <ImageView
                                android:id="@+id/listening_stats_icon"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_playlist" />

                            <TextView
                                android:id="@+id/listening_stats_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/listening_stats_icon"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="16dp"
                                android:text="Listening Stats"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/listening_stats_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/listening_stats_icon"
                                android:layout_below="@id/listening_stats_title"
                                android:layout_marginStart="16dp"
                                android:text="View your listening statistics and trends."
                                android:textColor="@android:color/darker_gray"
                                android:textSize="14sp" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Music Preferences -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="#440096"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:background="#440096">

                            <ImageView
                                android:id="@+id/music_preferences_icon"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_playlist" />

                            <TextView
                                android:id="@+id/music_preferences_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/music_preferences_icon"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="16dp"
                                android:text="Music Preferences"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/music_preferences_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/music_preferences_icon"
                                android:layout_below="@id/music_preferences_title"
                                android:layout_marginStart="16dp"
                                android:text="Customize your music experience and preferences."
                                android:textColor="@android:color/darker_gray"
                                android:textSize="14sp" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Recently Played -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#440096"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:background="#440096">


                            <ImageView
                                android:id="@+id/recently_played_icon"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_playlist" />

                            <TextView
                                android:id="@+id/recently_played_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/recently_played_icon"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="16dp"
                                android:text="Recently Played"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/recently_played_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/recently_played_icon"
                                android:layout_below="@id/recently_played_title"
                                android:layout_marginStart="16dp"
                                android:text="Check out the songs you've recently listened to."
                                android:textColor="@android:color/darker_gray"
                                android:textSize="14sp" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</FrameLayout>
